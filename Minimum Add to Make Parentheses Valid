//使括号有效的最少添加
class Solution {
public:
	int minAddToMakeValid(string S) {
		char s[1000] = {};//定义一个栈数组
		int j = 1;
		int count = 0;//初始化
		for (int i = 0; S[i] != 0; i++)
		{
			if ((s[j]=='(')&& ( S[i]==')')) { s[j] = 0; j--; }
			else { s[++j] = S[i]; }
			
		}//入栈,匹配则出栈

		if (s[j] == 0)j--;
		 for (; j>1; j--)count++;
		////检查栈内剩余
		
		return count;
	}
};
